{# New variables (Mike: erase this note if you want...)
 *
 *  Three variables set in preprocess to provide links:
 *  group_create_resources, group_join_, group_link
 *
 *   if group_create_resources.show
 *     link('Add Resource', group_create_resources.url,
 *       'class':...
 #}

<div class="container">
    
    
  
  <div class="row profile">
    <aside class="col-sm-4 pull-right">
      <div class="box">
        
        <div class="profile-photo">
        {{ content.field_image }}
        </div>
        
        <h1>{{ label }}</h1>
        <h2 class="segment">
          {{ content.field_industry_segment[0]['#title'] }}{% for key, value in content.field_industry_segment %}{% if key > 0 %}, {{ content.field_industry_segment[key]['#title'] }}{% endif %}
          {% endfor %}
        </h2>
        <div class="location">{{ content.field_headquarters_location.0.locality['#value'] }}, {{ content.field_headquarters_location.0.administrative_area['#value'] }}, {{ content.field_headquarters_location.0.country['#value'] }}</div>
        
        <p>
       <a href="{{ content.field_linkedin[0]['#url'] }}" target="_blank" class="btn btn-blank"><span class="icon"><i class="fab fa-linkedin"></i></span> <span class="text">LinkedIn </span></a> <a href="{{ content.field_website[0]['#url'] }}" target="_blank" class="btn btn-blank"><span class="icon"><i class="fas fa-globe"></i></span> <span class="text">Website </span></a></p>
        </ul>
        <span class="btn-block">
        {# drupal_region('groupmgt')#}
        {% if logged_in == false %}
          <a href="/user/register" class="btn btn-primary btn-block">Join SpaceBase</a>
        {% elseif group_leave.show %}
            {{ link('Leave organization', group_leave.url,
                { 'class':['btn-xs', 'button', 'btn', 'btn-success']} ) }}
        {% elseif group_join.show %}
            {{ link('Join organization', group_join.url,
                { 'class':['btn-xs', 'button', 'btn', 'btn-success']} ) }}
        {% endif %}
        </span>
      </div>
      <div class="box">
        {{ drupal_view('group_members', 'block_1') }}
      </div>
      
    </aside>
    <article{{ attributes.addClass('col-sm-8') }}>
      <div class="box">
        <h2>Description </h2>
        <div class="description">
        {{ content.field_description }}
        </div>

        {% if group_create_resources.show %}
          {{ link('Add Resource', group_create_resources.url,
            { 'class':['pull-right']} ) }}
        {% endif %}
          
        <h3>Organization Resources</h3>


        {# 
          Need to make this dynamically pull in all terms in the vocabulary instead of static 
         #}
         
         {% set terms = { 
            1: 'Files', 
            2: 'Reports', 
            3: 'Communication',
            4: 'Wiki',
            5: 'Code'   
            } 
          %}
          
          
    <div class="resources" role="tabpanel" data-example-id="togglable-tabs">
      <ul id="resourceTab" class="nav nav-tabs nav-tabs-responsive content-tabs" role="tablist">
          
        {% for key, value in terms %}
          
        <li role="presentation"{% if key == 1 %} class="active"{% endif %}{% if key == 2 %} class="next"{% endif %}>
          <a href="#{{ value }}" id="{{ value }}-tab" role="tab" data-toggle="tab" aria-controls="{{ value }}" aria-expanded="true">
            <span class="text">{{ value }}</span>
          </a>
        </li>
        
        {% endfor %}
      </ul>
      <div id="myTabContent" class="tab-content">
        {% for key, value in terms %}
        <div role="tabpanel" class="tab-pane fade{% if key == 1 %} in active{% endif %}" id="{{ value }}" aria-labelledby="{{ value }}-tab">
          
          {{ drupal_view('organization_resources', 'block_1', value) }}
          
        </div>
        {% endfor %}
      </div>
    </div>
          
          
          
        
      </div>
    </article>
  </div>

</div>
