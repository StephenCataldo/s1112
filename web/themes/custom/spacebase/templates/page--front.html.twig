{% set container = theme.settings.fluid_container ? 'container-fluid' : 'container' %}

{% include '@spacebase/includes/header.html.twig' %}

{# Main #}
{% block main %}


    {# Content #}

    {% block content %}
      <a id="main-content"></a>
{# This didn't work smoothly with other front page elements until clearfix...
and hacking in some design just to get it ok#}

        <h1 class="map-title">New Zealand Space Directory</h1>
        <div id="maps-charts-row" class="clearfix" style="padding-top: 2em;
margin-top: 2em":>
          <div class="map">
           {{ drupal_view('organizations_nz_overview_map', 'views_block_filter_block_plugin_display_block_1') }}
          </div>
          <div class="chart-tabs">
            <ul class="tabs">
              <li><a href="#tab-orgs">Organisations</a></li>
              <li><a href="#tab-events">Events</a></li>
            </ul>
            <div class="charts" id="tab-orgs">
            {{ drupal_view('organizations_by_field_and_city', 'views_block_filter_bpdb_1') }}
            <p><a href="/" class="reset btn btn-block btn-small btn-black">Reset map</a></p>
            </div>
            <div class="charts" id="tab-events">
              <p>Events coming soon</p>
            </div>
          </div>
        </div>

      {{ page.content }}
    {% endblock %}
        
{% endblock %}

