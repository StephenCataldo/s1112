
<div class="profile-photo">{{ fields.field_image.content }}</div>
<h1>{{ fields.label.content }}</h1>
<h2 class="segment">{{ fields.field_industry_segment.content }}</h2>
<div class="location">{{ fields.field_headquarters_location_postal_code.content }}</div>



<p>
  {% if fields.field_linkedin.content|render|striptags|trim is not empty %}
   <a href="{{ fields.field_linkedin.content|render|striptags|trim }}" target="_blank" class="btn btn-blank"><span class="icon"><i class="fab fa-linkedin"></i></span> <span class="text">LinkedIn </span></a>
  {% endif %}
   
  {% if fields.field_website.content|render|striptags|trim is not empty %}
   <a href="{{ fields.field_website.content|render|striptags|trim }}" target="_blank" class="btn btn-blank"><span class="icon"><i class="fas fa-globe"></i></span> <span class="text">Website </span></a>
  {% endif %}
   
</p>


 
  <span class="btn-block">
  
  {# drupal_region('groupmgt')#}
  {% if logged_in == false %}
    <a href="/user/register" class="btn btn-primary btn-block">Join SpaceBase</a>
  {% elseif group_links.leave %}
    <a href="{{group_links.leave}}"  class="btn btn-primary btn-block">Leave organization</a>
  {% elseif group_links.join  %}
    <a href="{{group_links.join}}" class="btn btn-primary btn-block">Join Organization</a>
  {% endif %}
  {% if logged_in %}
  <br/>
  <a href="/invite" class="btn btn-secondary btn-block">Invite New Members</a>
  {% endif %}

  </span>
